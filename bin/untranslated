[[ -z "$1" ]] && echo "Usage example: ./bin/untranslated pl" && exit 0

while read -r line
do
    grep "^$line:" ./src/SuplaBundle/Resources/translations/messages."$1".yml > /dev/null || echo $line
done < <(grep -R \$t ./src/Frontend/src/* | sed -n "s/\(.*\)\(('\)\(.*\)\(')\)\(.*\)/\3/p")
